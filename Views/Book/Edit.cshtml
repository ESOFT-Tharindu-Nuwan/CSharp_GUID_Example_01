@model Book

<h1>Edit Book Details</h1>

<form asp-action="Edit" method="post">
	<div class="mb-3">
		<label for="exampleFormControlInput1" class="form-label">Book Name</label>
		<input type="text" class="form-control" name="Name" asp-for="Name" id="name">
	</div>
	<div class="mb-3">
		<label for="exampleFormControlInput1" class="form-label">Book Author</label>
		<input type="text" class="form-control" name="Author" asp-for="Author" id="author">
	</div>
	<div class="mb-3">
		<label for="exampleFormControlInput1" class="form-label">Book ISBN</label>
		<input type="text" class="form-control" name="Isbn" asp-for="Isbn" id="isbn">
	</div>

	<div class="d-flex justify-content-between align-items-center">
		<button type="submit" class="btn btn-success">Update</button>
		<button class="btn btn-warning" asp-controller="Book" asp-action="Index">Cancel</button>
	</div>
</form>