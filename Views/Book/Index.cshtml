@model IEnumerable<Book>

<div class="d-flex justify-content-between align-items-center">
    <h1>Book Management</h1>
    <a asp-controller="Book" asp-action="Create" class="btn btn-primary">Create Book</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            @* <th scope="col">GUID</th> *@
            <th scope="col">Name</th>
            @* <th scope="col">Author</th> *@
            @* <th scope="col">ISBN</th> *@
            <th scope="col">ACTION</th>
        </tr>
    </thead>
    <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    @* <th scope="row">@book.Id</th> *@
                    <td>@book.Name</td>
                    @* <td>@book.Author</td> *@
                    @* <td>@book.Isbn</td> *@
                    <td>
                        <a class="btn btn-info me-1" asp-action="Details" asp-controller="Book" asp-route-id="@book.Id">View Details</a>
                        <a class="btn btn-success me-1" asp-action="Edit" asp-controller="Book" asp-route-id="@book.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Book" asp-route-id="@book.Id">Delete</a>
                    </td>
                </tr>
            }
    </tbody>
</table>

