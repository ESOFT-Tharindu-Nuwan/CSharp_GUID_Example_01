@model Book

<h3>Are you sure want to delete the book: @Model.Name?</h3>

<div class="mt-3">
	<h4>Book GUID</h4>
	<div class="text-primary fw-bold fs-4">@Model.Id</div>
</div>
<div class="mt-3">
	<h4>Book Author</h4>
	<div class="text-primary fw-bold fs-4">@Model.Author</div>
</div>

<form asp-action="Delete" method="post">
	<input type="hidden" asp-for="Id"/>
	<input class="btn btn-danger" type="submit" value="Delete"/>
	<a asp-action="Index">Back To List</a>
</form>
